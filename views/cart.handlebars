<link rel="stylesheet" href="/css/cart.css">

<div id="cart-page" class="row">
    <div class="col s12 z-depth-6 card blue-grey darken-1">
        <div class="card-content white-text">
            <span class="card-title"><h4>Order Summary</h4></span>
            <div class="card-action"></div>

            <table class="highlight centered">
                <thead>
                    <tr>
                        <th>Item Name</th>
                        <th>Item Price</th>
                        <th>Item Quantity</th>
                        <th>Item Total Price</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each cartContent}}
                    <tr>
                        <td>{{this.item.productName}}</td>
                        <td>{{this.item.productPrice}}</td>
                        <td>{{this.qty}}</td>
                        <td>$ {{this.price}}</td>
                    </tr>                   
                    {{/each}}
                    <tr>
                        <td></td>
                        <td></td>
                        <td class="right">Total: </td>
                        <td>$ {{totalPrice}}</td>
                    </tr>
                </tbody>
            </table>
            
            <div class="card-action">
                <a class="right" href="/checkout">Proceed to Checkout</a>
            </div>
        </div>
        
    </div>
</div>

<script src="/js/register.js" type="text/javascript"></script>
